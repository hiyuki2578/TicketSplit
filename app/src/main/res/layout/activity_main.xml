<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/activity_main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="jp.android_group.student.ticketsplit.MainActivity">
	<TextView
		android:id="@+id/focusView"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:focusable="true"
		android:focusableInTouchMode="true"/>
	<AutoCompleteTextView
		android:text=""
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/Dep"
		android:ems="10"
		android:layout_alignParentTop="true"
		android:layout_alignParentEnd="true"
		tools:ignore="LabelFor,RelativeOverlap"/>

	<TextView
		android:text="@string/depature"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignParentStart="true"
		android:id="@+id/Tx_Dep"/>

	<AutoCompleteTextView
		android:text=""
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ems="10"
		android:id="@+id/Via"
		android:layout_below="@+id/Dep"
		android:layout_alignStart="@+id/Dep"
		tools:ignore="LabelFor"/>

	<AutoCompleteTextView
		android:text=""
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/Arr"
		android:ems="10"
		android:layout_below="@+id/Via"
		android:layout_alignParentEnd="true"
		tools:ignore="LabelFor"/>

	<TextView
		android:text="@string/destination"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/Tx_Arr"
		android:layout_alignStart="@+id/Tx_Via"
		android:layout_below="@+id/Via"/>

	<TextView
		android:text="@string/via"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/Tx_Via"
		android:layout_below="@+id/Dep"
		android:layout_alignParentStart="true"/>

    <LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/trans"
				android:layout_weight="1"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/result"
				android:layout_weight="1"/>
        </LinearLayout>


    <ImageButton
        android:text="@string/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:src="@drawable/ic_search"
        android:background="@null"
        android:layout_below="@+id/Arr"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:text=""
        android:layout_width="270px"
        android:layout_height="wrap_content"
        android:id="@+id/Day"
        android:background="@null"
        android:drawableLeft="@drawable/ic_action_name"
        android:layout_marginEnd="27dp"
        android:layout_below="@+id/Arr"
        android:layout_toStartOf="@+id/button"
        />

    <ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
        android:background="#FFFFFFF"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/focusView"
        android:layout_alignParentStart="true">

    </ScrollView>

</RelativeLayout>
